@if (Model == null)
{
    <a href="javascript: void(0)" onclick="@((Action<EventArgs>) (args => IconClick()))">
        <div class="circle-bookmark">
            <div class='horizontal-plus'></div>
            <div class='vertical-plus'></div>
        </div>
        <div style="padding-bottom:15px;" class="text-center">
            Empty
        </div>
    </a>
}
else
{
<div class="show-bookmark-edit-container">
    <div class="col-12">
            <a href="javascript: void(0)" onclick="@((Action<EventArgs>) (args => EditIconClick()))">
                <div class="circle-edit float-right">
                    <i class="material-icons" style="font-size:25px">settings</i>
                </div>
            </a>
        </div>
        <a href="@Model.Url" target="_top">
        <img style="background-color:#3C4043" class="circle-bookmark d-block" src="@Model.ImageUrl">
        <div style="padding-bottom:15px;" class="text-center">
            @Model.Title
        </div>
    </a>
</div>
}
